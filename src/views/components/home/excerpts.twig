<div class="all-excerpts">
    {% for excerpt in component.excerpts %}
    <a href="javascript:void(0)" id="mostSalesLinkE" class="one-excerpt excerpt-anim" style="display: block; text-decoration: none;background-image: url('{{ excerpt.excerpts_image }}');">
        <p class="one-excerpt-title">{{ excerpt.excerpts_title }}</p>
        <p class="one-excerpt-desc">{{ excerpt.excerpts_description }}</p>
        <button>{{ trans('pages.heroSection.shop_now') }}</button>
    </a>
    {% endfor %}
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const link = document.getElementById('mostSalesLinkE');
    
    link.addEventListener('click', function(e) {
        e.preventDefault();
        
        // الحصول على المسار الحالي
        let currentPath = window.location.pathname;
        
        // إزالة / في النهاية إذا كانت موجودة
        if (currentPath.endsWith('/')) {
            currentPath = currentPath.slice(0, -1);
        }
        
        // الانتقال إلى المسار الجديد
        window.location.href = currentPath + '/most-Sales-products';
    });
});
</script>
<style>
    .all-excerpts {
        margin-top: 110px;
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        justify-content: center;
        gap: 20px;
    }

    .one-excerpt {
        width: 30%;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        position: relative;
        border-radius: 10px;
        overflow: hidden;
        padding: 20px;
        height: 220px;
    }

    .one-excerpt:last-child {
        width: 93%;
    }

    .one-excerpt-title {
        color: #666666;
        font-size: 14px;
        margin-top: 15px;
    }

    .one-excerpt-desc {
        color: #0F1939;
        font-size: 16px;
        font-weight: 600;
    }

    .one-excerpt button {
        background: transparent;
        color: white;
        border: 1px solid white;
        padding: 5px 20px;
        border-radius: 5px;
        margin-top: 15px;
        cursor: pointer;
        font-weight: bold;
    }

    @media screen and (max-width: 922px) {
        .one-excerpt {
            width: 48%;
        }
    }

    @media screen and (max-width: 584px) {
        .one-excerpt {
            width: 100%;
        }

        .one-excerpt:last-child {
            width: 100%;
        }

        .all-excerpts {
            margin-top: 50px;
        }
    }

    /* ============================= */
    /*        ANIMATION STYLE        */
    /* ============================= */
    .excerpt-anim {
        opacity: 0;
        transform: translateY(40px);
        transition: 0.7s ease;
    }

    .excerpt-anim.show {
        opacity: 1;
        transform: translateY(0);
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const excerpts = document.querySelectorAll('.excerpt-anim');

        const observer2 = new IntersectionObserver((entries) => {
            entries.forEach((entry) => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('show');
                    observer2.unobserve(entry.target);
                }
            });
        }, {
            threshold: 0.2
        });

        excerpts.forEach((item, index) => {
            item.style.transitionDelay = (index * 0.15) + "s";
            observer2.observe(item);
        });
    });
</script>